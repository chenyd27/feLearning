<%- include("header") -%>

    <body id="body">
        <div id="title">
            <h1>
                <%= currentDay %>
            </h1>
        </div>
        <div id="list">
            <div>
                <% for(var i = 0;i < newItem.length;i++){ %>
                    <form action="/delete" method="post">
                        <div class="item">
                            <input type="checkbox" style="margin-left: 20px; margin-right: 20px;" name="checkbox" value="<%= newItem[i].id%>" onChange="this.form.submit()">
                            <div>
                                <%= newItem[i].content %>
                            </div>
                            <input type="hidden" name="type" value="<%= currentDay %>" />
                        </div>
                    </form>
                    <%} %>
            </div>
        </div>
        <div id="submit-box">
            <form action="/" method="post">
                <input type="text" name="reminder" style="height: 50px; width: 300px;">
                <button class="btn btn-primary btn-lg" type="submit" name="list" value=<%=currentDay %>>Submit</button>
            </form>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    </body>

    <%- include("footer") -%>