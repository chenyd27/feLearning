<%- include("partial/Header") -%>


    <body>
        <div class="container">
            <h1>Compose</h1>
            <div id="input-form">
                <form action="/compose" method="post">
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" name="title" placeholder="type something" style="width:100%;">
                    </div>
                    <div class="form-group">
                        <label>Post</label>
                        <textarea rows="6" name="post" style="width: 100%;"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Publish</button>
                    </div>
                </form>
            </div>
        </div>
    </body>

    <%- include("partial/Footer") -%>